# =============================================================================
# ZETTY DOC HUB CONFIGURATION
# =============================================================================
# Copy this file to .env to customize your site configuration
# All settings are optional and will fallback to Zetty defaults if not specified

# =============================================================================
# SITE INFORMATION
# =============================================================================
# Basic site metadata displayed in the browser and search engines
# Defaults: title="Zetty Doc Hub", description="A modern documentation hub built with React and TypeScript", author="Zetty Doc Hub Team"
VITE_SITE_TITLE="Zetty Doc Hub"
VITE_SITE_DESCRIPTION="A modern documentation hub built with React and TypeScript"
VITE_SITE_AUTHOR="Zetty Doc Hub Team"

# =============================================================================
# NAVIGATION SETTINGS
# =============================================================================
# Customize the sidebar and navigation behavior
# Defaults: sidebarTitle="File Explorer", hiddenDirectories=[], maxTocLevel=2
VITE_NAVIGATION_SIDEBAR_TITLE="File Explorer"

# Hidden directories (comma-separated list of paths relative to src/docs)
# Example: "examples/hidden,private,drafts"
VITE_NAVIGATION_HIDDEN_DIRECTORIES=""

# Maximum table of contents heading level (1-6)
# Controls which headings appear in the TOC
VITE_NAVIGATION_MAX_TOC_LEVEL="2"

# =============================================================================
# BRANDING
# =============================================================================
# Customize the visual branding of your site
# Defaults: favicon="/favicon.svg"
VITE_BRANDING_FAVICON="/favicon.svg"

# =============================================================================
# FOOTER
# =============================================================================
# Custom footer text (optional)
# Defaults: text="Documentation Hub - Organized with Zetty Doc Hub"
VITE_FOOTER_TEXT="Documentation Hub - Organized with Zetty Doc Hub"

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Base path for the application deployment
# Defaults: basePath="/"
# Examples:
#   "/" for root domain (default)
#   "/my-docs/" for subdirectory deployment
#   "/repository-name/" for GitHub Pages
VITE_BASE_PATH="/"