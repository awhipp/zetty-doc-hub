# Development Environment
# Copy this file to .env for local development

# Base path for local development (usually root)
VITE_BASE_PATH=/

# For testing GitHub Pages deployment locally, use:
# VITE_BASE_PATH=/zetty-doc-hub/

# For subdirectory deployment, use:
# VITE_BASE_PATH=/my-docs/

# Site Configuration (optional - overrides site.config.json)
# VITE_SITE_TITLE="My Documentation Hub"
# VITE_SITE_DESCRIPTION="A comprehensive documentation hub for my project"
# VITE_SITE_AUTHOR="My Team"

# Navigation
# VITE_NAVIGATION_SIDEBAR_TITLE="My Docs"

# Branding
# VITE_BRANDING_FAVICON="/my-favicon.ico"
# VITE_BRANDING_LOGO="/path/to/logo.png"

# Footer
# VITE_FOOTER_TEXT="My Custom Footer Text"
